#include <stdio.h>
#include <string.h>

int main(){
    char string1[20];
    int i, length;
    int check = 0;
    
    printf("Escribe algo:");
    scanf("%s", string1);
    
    length = strlen(string1);
    
    for(i=0;i < length ;i++){
        if(string1[i] != string1[length-i-1]){
            check = 1;
            break;
   }
}
    
    if (check) {
        printf("%s No es un palindromo", string1);
    }    
    else {
        printf("%s es un palindromo", string1);
    }
    return 0;
}
